% for user-defined macro
\def\@makechapterhead#1{%
%  \vspace*{2\Cvs}% 欧文は50pt →上空きを無効化
  {\parindent \z@ \raggedright \normalfont
    \ifnum \c@secnumdepth >\m@ne
      \if@mainmatter
        {\vbox to \z@{\kern-48.5mm %章扉の差し込み
          \moveleft29mm\vbox to \z@{%
          \hbox to \z@{%
            \includegraphics[width=\dimexpr\paperwidth+6mm,height=\dimexpr\paperheight+6mm,keepaspectratio]{/book/articles/images/chapter_title/chapter_\arabic{chapter}.png}%
          \hss}\vss}\vss}
        \vskip0mm}\newpage
        \huge\headfont \@chapapp\thechapter\@chappos % 第x章
        \par\nobreak
        \vskip \Cvs % 欧文は20pt
      \fi
    \fi
    \interlinepenalty\@M
    \Huge \headfont #1\par\nobreak % 章タイトル
    \vskip 3\Cvs}} % 欧文は40pt